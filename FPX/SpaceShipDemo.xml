<?xml version="1.0" encoding="utf-8" ?>

<Scene>
  <Objects>

    <Object Name="Title">
      <Transform>
        <Position X="250" Y="50"/>
      </Transform>
      <Camera>
        <FieldOfView>60</FieldOfView>
        <NearPlaneDistance>0.01</NearPlaneDistance>
        <FarPlaneDistance>1000</FarPlaneDistance>
        <ClearColor Name="Black"/>
      </Camera>
      <TitleScreen/>
    </Object>
    
    <Object Name="Camera 1" Tag="Camera">
      <Transform>
        <Rotation Y="180"/>
      </Transform>
      <Camera>
        <FieldOfView>60</FieldOfView>
        <NearPlaneDistance>0.01</NearPlaneDistance>
        <FarPlaneDistance>1000</FarPlaneDistance>
        <ClearColor Name="Black"/>
      </Camera>
      <CameraFollow>
        <Offset Z="-5" Y="2.5"/>
        <Target>Ship</Target>
        <MoveSpeed>1.0</MoveSpeed>
      </CameraFollow>
      <SkyboxRenderer>
        <Texture Name="Textures//PlanetSkybox"/>
      </SkyboxRenderer>
      <AudioListener/>
    </Object>

    <Object Name="Ship" Tag="Player">
      <Transform>
        <Position Z="-5" Y="-2.5"/>
      </Transform>
      <BoxCollider>
        <Size X="2" Y="1" Z="4"/>
      </BoxCollider>
      <MeshRenderer>
        <Model Name="Models//Spaceship"/>
      </MeshRenderer>
      <Material>
        <DiffuseMap FileName="Textures//spaceshipDiffuse"/>
        <NormalMap FileName="Textures//spaceshipNormals"/>
      </Material>
      <FireLaser>
        <LaserEnergyCost>10</LaserEnergyCost>
        <Damage>33</Damage>
        <DestroyTag>Enemy</DestroyTag>
      </FireLaser>
      <AudioSource>
        <Filename>Audio//laser</Filename>
      </AudioSource>
      <SpaceshipEffects/>
      <SpaceShipResources>
        <MaxEnergy>100</MaxEnergy>
        <MaxHealth>100</MaxHealth>
        <Health>100</Health>
        <EnergyRechargeRate>30</EnergyRechargeRate>
      </SpaceShipResources>
      <SpaceshipControls>
        <MoveSpeed>75</MoveSpeed>
        <TurnSpeed>2</TurnSpeed>
      </SpaceshipControls>
      <Rigidbody>
        <Mass>75</Mass>
        <Drag>2.5</Drag>
        <AngularDrag>5</AngularDrag>
      </Rigidbody>
      <SpaceShipAudio>
        <AccelerateClip Filename="Audio\\shipAccelerate"/>
        <DecelerateClip Filename="Audio\\shipDecelerate"/>
        <AmbientClip Filename="Audio\\shipAmbient"/>
        <Threshold>0.01</Threshold>
      </SpaceShipAudio>
    </Object>

    <Object Name="Enemy Ship" Tag="Enemy">
      <Transform>
        <Position Z="40"/>
      </Transform>
      <BoxCollider>
        <Size X="2" Y="1" Z="4"/>
      </BoxCollider>
      <MeshRenderer>
        <Model Name="Models//Spaceship"/>
      </MeshRenderer>
      <SpaceShipResources>
        <MaxEnergy>100</MaxEnergy>
        <MaxHealth>100</MaxHealth>
        <Health>100</Health>
        <EnergyRechargeRate>30</EnergyRechargeRate>
        <UIOffset Y="100"/>
        <Visible>false</Visible>
      </SpaceShipResources>
      <Material>
        <DiffuseMap FileName="Textures//spaceshipDiffuse"/>
        <NormalMap FileName="Textures//spaceshipNormals"/>
        <SpecularColor Name="LightGray"/>
      </Material>
      <EnemyAI>
        <Target>Ship</Target>
        <MoveSpeed>4</MoveSpeed>
        <AggroRadius>30</AggroRadius>
        <ShootRadius>10</ShootRadius>
        <TurnSpeed>5</TurnSpeed>
        <ShootInterval>1</ShootInterval>
      </EnemyAI>
      <AudioSource>
        <Filename>Audio//laser</Filename>
      </AudioSource>
      <FireLaser>
        <DestroyTag>Player</DestroyTag>
        <Damage>100</Damage>
      </FireLaser>
    </Object>

    <Object Name="Asteroid 1">
      <Transform>
        <Position X="-5" Y="0.5" Z="-5"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid1"/>
      </MeshRenderer>
      <Spin>
        <Speed>1</Speed>
        <Axis X="0.1" Y="0.5" Z="0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 2">
      <Transform>
        <Position X="5" Y="0.5" Z="-5"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid2"/>
      </MeshRenderer>
      <Spin>
        <Speed>1</Speed>
        <Axis X="0.1" Y="0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 3">
      <Transform>
        <Position X="5" Y="0.5" Z="-13"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid3"/>
      </MeshRenderer>
      <Spin>
        <Speed>0.1</Speed>
        <Axis X="0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 4">
      <Transform>
        <Position X="5" Y="0.5" Z="20"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid1"/>
      </MeshRenderer>
      <Spin>
        <Speed>2</Speed>
        <Axis X="0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 5">
      <Transform>
        <Position X="20" Y="0.5" Z="2"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid2"/>
      </MeshRenderer>
      <Spin>
        <Speed>2</Speed>
        <Axis X="0.1"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 5">
      <Transform>
        <Position X="20" Y="0.5" Z="20"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid3"/>
      </MeshRenderer>
      <Spin>
        <Speed>0.6</Speed>
        <Axis X="-0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 6">
      <Transform>
        <Position X="-20" Y="0.5" Z="20"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid3"/>
      </MeshRenderer>
      <Spin>
        <Speed>0.6</Speed>
        <Axis X="-0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>
    
    <Object Name="The Sun">
      <Transform>
        <Rotation X="45"/>
        <Position Y="1.0"/>
      </Transform>
      <Light>
        <LightType>Directional</LightType>
        <DiffuseColor Name="White"/>
        <Intensity>0.9</Intensity>
      </Light>
    </Object>

    <Object Name="Death Screen" Visible="false">
      <Transform>
        <Position X="200" Y="200"/>
      </Transform>
      <DeadScreen/>
    </Object>
    
  </Objects>
</Scene>