<?xml version="1.0" encoding="utf-8" ?>

<Scene>
  <Objects>

    <Object Name="Camera">
      <Camera>
        <FieldOfView>60</FieldOfView>
        <NearPlaneDistance>0.01</NearPlaneDistance>
        <FarPlaneDistance>1000</FarPlaneDistance>
        <ClearColor Name="Black"/>
      </Camera>
      <CameraFollow>
        <Offset Z="-5" Y="2.5"/>
        <Target>Ship</Target>
        <MoveSpeed>1.0</MoveSpeed>
      </CameraFollow>
      <SkyboxRenderer>
        <Texture Name="Textures//PlanetSkybox"/>
      </SkyboxRenderer>
      <AudioListener/>
    </Object>

    <Object Name="Ship">
      <Transform>
        <Position Z="-5" Y="-2.5"/>
        <Rotation Y="180"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//Spaceship"/>
      </MeshRenderer>
      <Material>
        <DiffuseMap FileName="Textures//spaceshipDiffuse"/>
        <NormalMap FileName="Textures//spaceshipNormals"/>
      </Material>
      <FireLaser>
        <LaserEnergyCost>10</LaserEnergyCost>
      </FireLaser>
      <AudioSource>
        <Filename>Audio//laser</Filename>
      </AudioSource>
      <SpaceshipEffects/>
      <SpaceShipResources>
        <MaxEnergy>100</MaxEnergy>
        <MaxHealth>100</MaxHealth>
        <Health>100</Health>
        <EnergyRechargeRate>30</EnergyRechargeRate>
      </SpaceShipResources>
      <SpaceshipControls>
        <MoveSpeed>75</MoveSpeed>
        <TurnSpeed>2</TurnSpeed>
      </SpaceshipControls>
      <Rigidbody>
        <Mass>75</Mass>
        <Drag>2.5</Drag>
        <AngularDrag>5</AngularDrag>
      </Rigidbody>
    </Object>

    <Object Name="Asteroid 1">
      <Transform>
        <Position X="-5" Y="0.5" Z="-5"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid1"/>
      </MeshRenderer>
      <Spin>
        <Speed>1</Speed>
        <Axis X="0.1" Y="0.5" Z="0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 2">
      <Transform>
        <Position X="5" Y="0.5" Z="-5"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid2"/>
      </MeshRenderer>
      <Spin>
        <Speed>1</Speed>
        <Axis X="0.1" Y="0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 3">
      <Transform>
        <Position X="5" Y="0.5" Z="-13"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid3"/>
      </MeshRenderer>
      <Spin>
        <Speed>0.1</Speed>
        <Axis X="0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 4">
      <Transform>
        <Position X="5" Y="0.5" Z="20"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid1"/>
      </MeshRenderer>
      <Spin>
        <Speed>2</Speed>
        <Axis X="0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 5">
      <Transform>
        <Position X="20" Y="0.5" Z="2"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid2"/>
      </MeshRenderer>
      <Spin>
        <Speed>2</Speed>
        <Axis X="0.1"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 5">
      <Transform>
        <Position X="20" Y="0.5" Z="20"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid3"/>
      </MeshRenderer>
      <Spin>
        <Speed>0.6</Speed>
        <Axis X="-0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>

    <Object Name="Asteroid 6">
      <Transform>
        <Position X="-20" Y="0.5" Z="20"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid3"/>
      </MeshRenderer>
      <Spin>
        <Speed>0.6</Speed>
        <Axis X="-0.1" Y="-0.5" Z="-0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>
    
    <Object Name="The Sun">
      <Transform>
        <Rotation X="45"/>
        <Position Y="1.0"/>
      </Transform>
      <Light>
        <LightType>Directional</LightType>
        <DiffuseColor Name="White"/>
        <Intensity>0.9</Intensity>
      </Light>
    </Object>

    <Prefab Filename="Prefabs\\Box.xml">
      <Transform>
        <Position Z="-20"/>
      </Transform>
      <Spin>
        <Speed>1</Speed>
        <Axis Y="1"/>
      </Spin>
    </Prefab>
    
  </Objects>
</Scene>