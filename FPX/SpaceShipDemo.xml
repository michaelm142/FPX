<?xml version="1.0" encoding="utf-8" ?>

<Scene>
  <Objects>

    <Object Name="Camera">
      <Camera>
        <FieldOfView>60</FieldOfView>
        <NearPlaneDistance>0.01</NearPlaneDistance>
        <FarPlaneDistance>1000</FarPlaneDistance>
        <ClearColor Name="Black"/>
      </Camera>
      <GameControlTest>
        <MoveSpeed>5.0</MoveSpeed>
        <RotationSpeed>50.0</RotationSpeed>
      </GameControlTest>
      <SkyboxRenderer>
        <Texture Name="Textures//PlanetSkybox"/>
      </SkyboxRenderer>
    </Object>

    <Object Name="Ship">
      <Transform Parent="Camera">
        <Position Z="-5" Y="-2.5"/>
        <Rotation Y="180"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//Spaceship"/>
      </MeshRenderer>
      <Material>
        <DiffuseColor Name="Blue"/>
        <SpecularColor Name="White"/>
      </Material>
      <FireLaser/>
      <SpaceshipEffects/>
    </Object>

    <Object Name="Asteroid 1">
      <Transform>
        <Position X="5" Y="0.5" Z="5"/>
      </Transform>
      <MeshRenderer>
        <Model Name="Models//asteroid1"/>
      </MeshRenderer>
      <Spin>
        <Speed>1</Speed>
        <Axis X="0.1" Y="0.5" Z="0.2"/>
      </Spin>
      <Material>
        <DiffuseColor Name="Gray"/>
      </Material>
    </Object>
    
    <Object Name="The Sun">
      <Transform>
        <Rotation X="45"/>
        <Position Y="1.0"/>
      </Transform>
      <Light>
        <LightType>Directional</LightType>
        <DiffuseColor Name="White"/>
        <Intensity>0.9</Intensity>
      </Light>
    </Object>

    <Prefab Filename="Prefabs\\Box.xml">
      <Transform>
        <Position Z="-20"/>
      </Transform>
      <Spin>
        <Speed>1</Speed>
        <Axis Y="1"/>
      </Spin>
    </Prefab>
    
  </Objects>
</Scene>